{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Persons",
  "type": "array",
  "items": {
    "$ref": "#/definitions/Person"
  },
  "definitions": {
    "Person": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "age": {
          "type": "integer",
          "minimum": 0
        },
        "hobbies": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 2
          }
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "firstName": {
                "const": "John"
              },
              "lastName": {
                "const": "Liu"
              }
            }
          },
          "then": {
            "required": [
              "age"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "firstName": {
                "const": "John"
              },
              "lastName": {
                "const": "Wang"
              }
            }
          },
          "then": {
            "required": [
              "hobbies"
            ]
          }
        }
      ]
    }
  }
}